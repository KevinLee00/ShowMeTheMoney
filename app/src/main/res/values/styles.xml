<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="light">
        <item name="android:background">@color/main_background</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="dark">
        <item name="android:background">@color/dark_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dark_tab" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/dark_toolbars</item>
        <item name="tabTextAppearance">@style/sans_serif</item>
        <item name="tabIndicatorColor">@color/primaryGreen</item>
        <item name="tabSelectedTextColor">@color/primaryDarkerGreen</item>
    </style>

    <style name="light_tab" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/primaryGreen</item>
        <item name="tabTextAppearance">@style/sans_serif</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>


    <style name="dark_toolbar">
        <item name="android:background">@color/dark_toolbars</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="light_toolbar">
        <item name="android:background">@color/primaryGreen</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="dark_calendar">
        <item name="compactCalendarBackgroundColor">@color/dark_calendar_background</item>
        <item name="compactCalendarCurrentDayBackgroundColor">#B71C1C</item>
        <item name="compactCalendarCurrentSelectedDayBackgroundColor">#E57373</item>
        <item name="compactCalendarTextSize">14sp</item>
        <item name="compactCalendarTextColor">@color/white</item>
        <item name="android:background">@color/dark_calendar_background</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="light_calendar">
        <item name="compactCalendarBackgroundColor">@color/main_background</item>
        <item name="compactCalendarCurrentDayBackgroundColor">#B71C1C</item>
        <item name="compactCalendarCurrentSelectedDayBackgroundColor">#E57373</item>
        <item name="compactCalendarTextSize">14sp</item>
        <item name="compactCalendarTextColor">@color/black_text</item>
        <item name="android:background">@color/main_background</item>
        <item name="android:textColor">@color/black_text</item>

    </style>

    <style name="default_progress">
        <item name="rcProgress">70.0</item>
        <item name="rcMax">100.0</item>
        <item name="rcRadius">15dp</item>
        <item name="rcBackgroundPadding">4dp</item>
        <item name="rcBackgroundColor">@color/progress_background</item>
        <item name="android:layout_marginTop">20dp</item>

    </style>


    <style name="sans_serif" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="tabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_drawable</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ActionBar" parent="AppTheme">
        <item name="android:displayOptions">showHome</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
