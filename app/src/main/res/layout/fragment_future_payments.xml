<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="edu.ucsb.cs.cs185.nivek325.showmethemoney.FuturePaymentsFragment">

    <LinearLayout
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/month_layout"
                android:layout_width="fill_parent"
                android:layout_height="50sp"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/calendar_month_border">

                <Button
                    android:id="@+id/prev_month"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_chevron_left_black_24dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/month"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="March 2016"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/next_month"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ic_chevron_right_black_24dp"
                    android:gravity="center"/>

            </LinearLayout>

            <edu.ucsb.cs.cs185.nivek325.showmethemoney.CustomCalendarView
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/month_layout"
                android:layout_centerVertical="true"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                app:compactCalendarTextSize="14sp"
                app:compactCalendarBackgroundColor="#ffe95451"
                app:compactCalendarCurrentDayBackgroundColor="#B71C1C"
                app:compactCalendarCurrentSelectedDayBackgroundColor="#E57373"
                app:compactCalendarShouldSelectFirstDayOfMonthOnScroll="false"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

        </ListView>

    </LinearLayout>

</LinearLayout>
