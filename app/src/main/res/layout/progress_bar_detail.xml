<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/progress_detail_1"
            android:layout_height="50dp"
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:rcBackgroundPadding="5dp"
            app:rcProgress="70.0"
            app:rcMax="100.0"
            app:rcRadius="25dp"
            app:rcProgressColor="@color/material_red"
            app:rcSecondaryProgressColor="@color/primaryDarkerGreen"
            />

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/progress_detail_2"
            android:layout_height="50dp"
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:rcBackgroundPadding="5dp"
            app:rcProgress="70.0"
            app:rcRadius="25dp"
            app:rcProgressColor="@color/material_amber"
            app:rcSecondaryProgressColor="@color/primaryDarkerGreen"
            />


        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/progress_detail_3"
            android:layout_height="50dp"
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:rcBackgroundPadding="5dp"
            app:rcProgress="70.0"
            app:rcRadius="25dp"
            app:rcProgressColor="@color/material_cyan"
            app:rcSecondaryProgressColor="@color/primaryDarkerGreen"
            />


        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/progress_detail_4"
            android:layout_height="50dp"
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:rcBackgroundPadding="5dp"
            app:rcProgress="70.0"
            app:rcRadius="25dp"
            app:rcProgressColor="@color/material_purple"
            app:rcSecondaryProgressColor="@color/primaryDarkerGreen"
            />


        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/progress_detail_5"
            android:layout_height="50dp"
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:rcBackgroundPadding="5dp"
            app:rcProgress="70.0"
            app:rcRadius="25dp"
            app:rcProgressColor="@color/material_light_green"
            app:rcSecondaryProgressColor="@color/primaryDarkerGreen"
            />



    </LinearLayout>

</ScrollView>